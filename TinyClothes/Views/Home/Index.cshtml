@{
    ViewData["Title"] = "Welcome to Tiny Clothes";
}

<div class="alert alert-warning" role="alert">
    The products shown on this website do not actually exsist! This is a mock website, meant for learning.
</div>

<h1>Tiny Clothes</h1>
<p>Tiny clothes for tiny things, but not babies.</p>
<br />
<br />
